<Window x:Class="WpfDBViewer.DbCreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDBViewer"
        mc:Ignorable="d"
        Title="DbCreateWindow" Height="250" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">Введите имя бд:</TextBlock>
            <TextBox Grid.Row="0" x:Name="DBName" VerticalAlignment="Center" Width="100" Margin="5"/>
        </StackPanel>

        <Button HorizontalAlignment="Center" Content="Создать" Height="25" Width="100" Grid.Row="1" Click="DbCreate"/>
    </Grid>
</Window>
